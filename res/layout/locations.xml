<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/navigation_bar"
            android:layout_height="45dip"
            android:layout_width="fill_parent"
            android:background="@drawable/navigation_bar_background"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navigation_icon"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/navigation_icon"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textScaleX="0.9"
            android:textStyle="bold"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/navigation_all_elements"
            android:layout_height="fill_parent"
            android:layout_width="41dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_all_elements"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/navigation_selector_1"
            android:layout_height="fill_parent"
            android:layout_width="1dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_all_elements"
            android:background="#6690a5" />

        <ImageButton
            android:id="@+id/navigation_favourites_elements"
            android:layout_height="fill_parent"
            android:layout_width="41dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_selector_1"
            android:scaleType="centerInside"
            android:onClick="showMain"
            android:src="@drawable/ic_tab_favourites_elements"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/navigation_selector_2"
            android:layout_height="fill_parent"
            android:layout_width="1dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_favourites_elements"
            android:background="#6690a5" />

    </RelativeLayout>


    <ListView android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:fastScrollEnabled="true" />

    <TextView android:id="@android:id/empty"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:textColor="@android:color/black"
              android:gravity="center"
              android:textSize="18sp"
              android:text="@string/empty"/>

</LinearLayout>