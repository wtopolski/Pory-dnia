<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/navigation_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/navigation_bar_background"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/navigation_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/navigation_icon"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textScaleX="0.9"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/navigation_all_elements"
            android:layout_width="41dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:onClick="showList"
            android:src="@drawable/ic_tab_all_elements" />

        <LinearLayout
            android:id="@+id/navigation_selector_1"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_all_elements"
            android:background="#6690a5" />

        <ImageButton
            android:id="@+id/navigation_favourites_elements"
            android:layout_width="41dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_selector_1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tab_favourites_elements" />

        <LinearLayout
            android:id="@+id/navigation_selector_2"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/navigation_favourites_elements"
            android:background="#6690a5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#55FFBF00"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="miasto"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/province"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="prowincja"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="wsch贸d:"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="wsch贸d"
        android:textColor="#5D8AA8"
        android:textSize="30sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="kulminacja:"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/culmination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="kulminacja"
        android:textColor="#5D8AA8"
        android:textSize="30sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="zach贸d:"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="zach贸d"
        android:textColor="#5D8AA8"
        android:textSize="30sp" />

</LinearLayout>