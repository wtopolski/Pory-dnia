<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="6" android:versionName="19" package="pl.wtopolski.android.sunsetwidget">

    <application android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name=".MyApplication" android:theme="@style/AppTheme">
        
        <activity android:label="@string/app_name" android:launchMode="singleTop" android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/app_name" android:name=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/app_name" android:launchMode="singleTop" android:name=".LocationsListActivity">
            <intent-filter>
	            <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
	        </intent-filter>
	        <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        
        <activity android:label="@string/app_name" android:name=".FavoritesListActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/app_name" android:name=".ConfListActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/dashboard_settings" android:name=".pref.GeneralPreferenceActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name=".WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_provider"/>
        </receiver>

        <provider android:authorities="pl.wtopolski.sunsetwidget.contentprovider" android:name=".provider.LocationContentProvider"/>
    </application>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"/>

</manifest>